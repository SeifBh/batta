{% extends ":default:test.html.twig" %}


{% block title %}Clubs{% endblock %}
{% block head %}
    {{ parent() }}
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <style type="text/css">
        .important { color: #2b9988; }
        div.gallery {
            margin: 5px;
            border: 1px solid #fefff9;
            float: left;
            width: 180px;
        }

        div.gallery:hover {
            border: 1px solid #777;
        }

        div.gallery img {
            width: 100%;
            height: auto;
        }

        div.desc {
            padding: 15px;
            text-align: center;
        }





    </style>
{% endblock %}
{% block content %}
    <div class="big-div">
        <h1>La Liste Des Clubs</h1>
    </div>








        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6">
                    {% for c in cl %}

                        <div class="gallery"   >
                            <a target="_blank" href="#">
                            <img src="{{ asset('uploads/images/' ~ c.image) }}" alt=""  width="600" height="400" class="img-responsive zoom-img">
                            </a>
                            <div class="desc">{{ c.nomC}}</div>
                        </div>
                    {% endfor %}





                </div>

                <div class="col-sm-6" >
                    <div id="div_chart"></div>

                    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>                    <script type="text/javascript">
                        {{ gc_draw(piechart, 'div_chart') }}
                    </script>
                </div>
                <div align="center">
                <h1>Que voulez-vous faire?</h1>
                {% if is_granted('ROLE_RESPONSABLE_SUPER_ADMIN')
                or is_granted('ROLE_ADMIN')
                or is_granted('ROLE_SUPER_ADMIN') %}
                    <a href={{ path('club_ajout')}} > Ajouter un Club </a><br><br>

                    <a href={{ path('club_affiche')}} > Afficher les clubs </a><br><br>

                {% else%}
                    <a href={{ path('club_affiche')}} > Afficher les clubs </a><br><br>
{% endif %}
                </div>
                </center>
            </div>
        </div>





    </div>


